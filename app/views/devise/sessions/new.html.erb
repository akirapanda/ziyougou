<%= render "shared/error_messages",:target=>resource%>


	<div id='wrapper'>
	    <div class='application'>
	        <div class='application-content'>
	            <a href="sign_in.html"><div class='icon-heart'></div>
	                <span>土猴商城</span>
	            </a>
	        </div>
	    </div>
	    <div class='controls'>
	        <div class='caret'></div>
	        <div class='form-wrapper'>
	            <h1 class='text-center'>登录系统</h1>
						  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	
	
	<div style="margin:0;padding:0;display:inline">
		<input name="utf8" type="hidden" value="&#x2713;" /></div>
	                <div class='row-fluid'>
	                    <div class='span12 icon-over-input'>
									    	<%= f.email_field :email, :autofocus => true, :placeholder => 'Email address', class: "span12" %>
	                        <i class='icon-user muted'></i>
	                    </div>
	                </div>
	                <div class='row-fluid'>
                    <div class='span12 icon-over-input'>
										    <%= f.password_field :password, :placeholder => 'Password' , class: "span12"%>
	                        <i class='icon-lock muted'></i>
		                 </div>
	                </div>
	
							    <% if devise_mapping.rememberable? %>
							      <label class="checkbox"> <%= f.check_box :remember_me %> Rembmer me </label>
							    <% end %>

							    <%= f.submit "登录",:class=>'btn btn-block' %>
								 <% end %>
	            <div class='text-center'>
	                <hr class='hr-normal' />
								  <%= render "devise/shared/links" %>
	            </div>
	        </div>
	    </div>
	    <div class='login-action text-center'>
	    </div>
	</div>


	<script>
	$(document).ready(function(){
		$("body").addClass('contrast-fb sign-in contrast-background');
	});
	</script>