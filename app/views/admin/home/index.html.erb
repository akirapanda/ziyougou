<%= content_for :title do %>
	自由购物帮管理后台
<% end %>

<div class='row-fluid'>
    <div class='span6 box'>
        <div class='box-header'>
            <div class='title'>
                <div class='icon-inbox'></div>
                优惠券
            </div>
            <div class='actions'>
                <a href="#" class="btn box-remove btn-mini btn-link"><i class='icon-remove'></i>
                </a>
                <a href="#" class="btn box-collapse btn-mini btn-link"><i></i>
                </a>
            </div>
        </div>	  
				
        <div class='row-fluid'>
            <div class='span6'>
                <div class='box-content box-statistic'>
                    <h3 class='title text-error'><%=@new%></h3>
                    <small>新申请</small>
                    <div class='text-error icon-inbox align-right'></div>
                </div>
                <div class='box-content box-statistic'>
                    <h3 class='title text-warning'><%=@process%></h3>
                    <small>处理中</small>
                    <div class='text-warning icon-check align-right'></div>
                </div>

            </div>
            <div class='span6'>
	            <div class='box-content box-statistic'>
                  <h3 class='title text-success'><%=@completed%></h3>
                  <small>已生效</small>
                  <div class='text-info icon-time align-right'></div>
              </div>
              <div class='box-content box-statistic'>
                 <h3 class='title text-muted'><%=@canceled%></h3>
                <small>已取消</small>
                <div class='text-primary icon-truck align-right'></div>
              </div>
            </div>
        </div>
    </div>
</div>