<div class='accordion accordion-contrast' id='accordion'>
  <div class="accordion-group">
    <div class="accordion-heading">
      <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseOne">
        筛选查询
      </a>
    </div>

    <div id="collapseOne" class="accordion-body collapse">
      <div class="accordion-inner">
				<div class="widget stacked ">
					<div class="widget-content">
						<%= search_form_for(@q,url: admin_shops_path,:html=>{:class=>"form-horizontal"} ) do |f| %>
						  <div class="control-group">
						    <label class="control-label" for="inputEmail">名称</label>
						    <div class="controls">
									<%=f.text_field :name_cont%>
						    </div>
						  </div>
						
							<div class="control-group">
							    <label class="control-label" for="inputEmail">电话</label>
							    <div class="controls">
										<%=f.text_field :phone_cont%>
							  </div>
							</div>
							
							<div class="control-group">
							    <label class="control-label" for="inputEmail">地址</label>
							    <div class="controls">
										<%=f.text_field :address_cont%>
							  </div>
							</div>
							
						<hr/>
						  <%= f.submit "查询",:class=>"btn btn-block btn-primary" %>				  
						<% end %>
					</div>
				</div>

      </div>
    </div>

  </div>
</div>