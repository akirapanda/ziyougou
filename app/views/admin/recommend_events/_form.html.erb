<%=render 'shared/error_messages',:target=>@event%>

<%=simple_form_for([:admin,@event],:html=>{:class=>"form-horizontal"}) do |f|%>
	<%= f.input :title,:input_html=>{:class=>"input-xxlarge"}%>
	<%= f.input :brief,:input_html=>{:class=>"input-xxlarge"}%>

		

	
	<%= f.input :cover,:input_html=>{:class=>"input-xxlarge" }	%>
	<div class="control-group tel optional shop_content">
		<label class="tel optional control-label" for="shop_content">详细介绍</label>
		<div class="controls">
			<%= f.cktext_area :content,:input_html=>{:class=>"form-control"}, :ckeditor => { :height => 500 }%>
		</div>
	</div>	
	<div class="form-actions">
		<button type="submit" class="btn btn-primary">保存</button> 
	</div> 
<%end%>