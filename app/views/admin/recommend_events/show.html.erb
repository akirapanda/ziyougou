<%= content_for :title do %>
	帮主推荐咨询
<% end %>

<div class='box bordered-box blue-border'>
  <div class='box-header blue-background'>
	  <div class='title'>
			<%=@event.title%>
		</div>
	</div> <!-- /widget-header -->		
	
  <div class='box-content box-double-padding'>
			<div class="row-fluid">
				<div class="span4">
					<%=image_tag @event.cover_url(:small) if @event.cover%>
					<br/>
					<br/>
					
					<b>初次创建时间:</b>:
					<p><%=l @event.created_at %></p>
					<b>最后编辑时间</b>:
					<p><%=l @event.updated_at %></p>
				</div>
				
				<div class="span8">
					<b>简介:</b>
					<p><%=@event.brief %></p>
					<b>正文:</b>
					<%=raw @event.content %>	
						
					
				</div>	
			</div>
	</div>
</div>

<div class="row-fluid">
	<div class="btn-group pull-left">
		<%=link_to "返回列表",admin_recommend_events_path,:class=>"btn"%>
	
	</div>
	<div class="btn-group pull-right">
		<%=link_to "编辑",edit_admin_recommend_event_path(@event),:class=>"btn btn-primary"%>
		<%=link_to "删除",[:admin,@event],:method=>:delete,:class=>"btn btn-danger"%>
	</div>
</div>