<%= content_for :title do %>
	系统管理员变更密码
<% end %>

<div class='row-fluid'>
	<div class='box bordered-box blue-border'>
		<%=render 'shared/error_messages',:target=>@admin_user%>

		<%=simple_form_for([:admin,@admin_user],:url=>update_password_admin_admin_user_path(@admin_user),:html=>{:class=>"form-horizontal"}) do |f|%>
			<%= f.input :email,:input_html=>{:class=>"input-xxlarge"}%>
			<%= f.input :password,:as=>:password%>
			<%= f.input :password_confirmation%>
			<div class="form-actions">
				<button type="submit" class="btn btn-primary">保存</button> 
			</div> 
		<%end%>	</div>
</div>