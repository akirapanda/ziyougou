<%= content_for :title do %>
	用户信息
<% end %>

<%=render 'header_nav'%>
<div class='box bordered-box blue-border'>
  <div class='box-header blue-background'>
	  <div class='title'>
			<%=@user.name%>
		</div>
	</div> <!-- /widget-header -->		
	
  <div class='box-content box-double-padding'>
			<div class="row-fluid">
				<div class="span4">					
					<b>初次创建时间:</b>:
					<p><%=l @user.created_at %></p>
					<b>最后编辑时间</b>:
					<p><%=l @user.updated_at %></p>
				</div>
				
				<div class="span8">
					<b>用户名:</b>
					<p><%=@user.mobile %></p>
						
						
					
				</div>	
			</div>
	</div>
</div>

<div class="row-fluid">
	<div class="btn-group pull-left">
		<%=link_to "返回列表",admin_users_path,:class=>"btn"%>
	
	</div>
	<div class="btn-group pull-right">
		<%=link_to "编辑基本信息",edit_admin_user_path(@user),:class=>"btn btn-primary"%>
		<%=link_to "删除",[:admin,@user],:method=>:delete,:class=>"btn btn-danger"%>
	</div>
</div>