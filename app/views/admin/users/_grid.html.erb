<%= grid(@users_grid, show_filters: :when_filtered, hide_csv_button: true) do |g|

	g.column :name => '系统编号', :attribute => 'id'  do |user|
		link_to user.id,[:admin,user]
	end
	
	g.column :name => '名称', :attribute => 'mobile'  do |user|
		link_to user.mobile,[:admin,user]
	end


	g.column do |user|
		edit =  link_to raw("<button class=\"btn btn-mini btn-info\"><i class=\"icon-edit bigger-120\"></i></button>"), edit_admin_user_path(user)
		remove = link_to raw("<button class=\"btn btn-mini btn-danger\"><i class=\"icon-trash bigger-120\"></i></button>"), [:admin,user], method: :delete, data: { confirm: '确认删除商户记录吗?' }
		raw "#{edit} #{remove}"
	end
	
end -%>