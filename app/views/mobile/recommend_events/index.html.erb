<%= content_for :header do %>
	<header class="bar bar-nav">
		<a class="icon icon-left-nav pull-left" onclick="window.history.back()"></a>
	  <h1 class="title"><i class="fa fa-thumbs-o-up"></i>
		帮主推荐</h1>
	</header>
<% end %>

<ul class="table-view">
	<%@recommend_events.each do |event|%>
		<li class="table-view-cell media">
			<%=link_to [:mobile,event], :class=>"navigate-right","data-ignore"=>"push", "data-transition"=>"slide-in" do%>
					<%=image_tag event.cover_url(:mobile),:style=>"width:120px",:class=>"media-object pull-left"%>
		      <div class="media-body">
						<%=event.title%>
						<p><%=event.brief%></p>
		      </div>
			<%end%>
		</li>	
	<%end%>
</ul>

