<style>
 h3{
	color:white;
	}
	
	.seller_title,seller_body{
		padding-top:20px;
		
		padding-left:50px;
	}
	
	#sellers{
		margin-top:20px;
		padding-left:20px;
		
	}
	
	.seller{
		margin-left:10px;
		margin-top:20px;
		
	}
</style>
<style>

.content{
	background-color:#F7F7F7;
	margin-bottom:50px;
}

.images-content{
	position: absolute;
	z-index: 1;
	left: 0;
	bottom:0;
	width: 100%;
	color: #fff;
	background: rgba(0,0,0,.7);
	height: 30px;
	line-height: 30px; 
	overflow: hidden;
}

.images-wrapper{
min-height:100px;
position:relative;
}
.pad{
	padding-left:30px;
}

.no_pad{
	padding:0px;
}

.thumb{
	width:100px;
}
</style>
<div class="seller_list">
	<div class="seller_title">
	
		<h3><i class="fa fa-fire"></i>
		推荐商户</h3>
	</div>
	
	<div id="sellers" class="seller_body">
		<%@sellers.each do |seller|%>
		<%=link_to [:mobile,seller] ,"data-ignore"=>"push" do%>
		
			<div class="seller images-wrapper">
				<%=image_tag seller.logo_url%>
				
				
				<div class="images-content pad">
				<%=seller.name%>
				</div>
			</div>
			<%end%>
			
		<%end%>
	</div>
	
</div>

<script>
$(document).ready(function(){
	$('#sellers').isotope({  
	  itemSelector : '.seller',  
	  layoutMode : 'fitRows'  
	});
});

</script>