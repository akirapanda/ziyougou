<style>
 h3{
	color:white;
	}
	
	.seller_title,seller_body{
		padding-top:20px;
		
		padding-left:50px;
	}
	
	#sellers{
		margin-top:20px;
		padding-left:20px;
		
	}
	
	.seller{
		margin-left:10px;
		margin-top:20px;
		padding:0px 0px 0px 0px;
		width: 100px;
	}
	
	
</style>


<script>
$(document).ready(function(){
	$('#sellers').isotope({  
	  itemSelector : '.seller'
	});
	
});

</script>


<div class="seller_list">
	<div class="seller_title">
	
		<h3><i class="fa fa-fire"></i>
		推荐商户</h3>
	</div>
	
	<div id="sellers" class="seller_body">
		<%@sellers.each do |seller|%>
		<%=link_to [:mobile,seller] ,"data-ignore"=>"push" do%>
		
			<div class="seller images-wrapper">
				<%=image_tag seller.try(:nation).try(:flag_image)%> <%=seller.name%> 
				
				<%=image_tag seller.logo_url(:small)%>

			</div>
			<%end%>
			
		<%end%>
		
	</div>
	
</div>

