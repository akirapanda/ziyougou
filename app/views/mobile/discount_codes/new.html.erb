<ul class="table-view">
	<li class="table-view-cell">
		<h1>优惠券预约申请</h1>
	</li>
</ul>

<%=simple_form_for [:mobile,@code] ,:html=>{:class=>"input-group"} do |f| %>
	<%=f.hidden_field :discount_event_id%>
	
  <div class="input-row">
  </div>

  <div class="input-row">
    <label>申请人姓名</label>
		<%=f.text_field :name,:placeholder=>"如:张小二,王全蛋"%>
	</div>
	<div class="input-row">
    <label>联系手机</label>
		<%=f.text_field :mobile,:placeholder=>"如:13512345678"%>
	</div>
	<div class="input-row">
    <label>护照号码</label>
		<%=f.text_field :passport_no,:placeholder=>"如:南校区一公寓1号楼999"%>
	</div>
	<button class="btn btn-primary btn-block">提交</button>
<%end%>