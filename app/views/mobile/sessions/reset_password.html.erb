<div class="register-container container">
    <div class="row">
			<% @user.errors.each do |key,value| %>
			  <div class="alert alert-<%= key %>"><%= value %></div>
			<% end %>
        <div class="register span12">

					<%= form_for(@user , url: mobile_change_password_path ,:html=>{:class=>"input-group"}) do |f| %>
					 	<h3> <span class="red"><strong>自游购物帮</strong></span></h3>
						<%=f.label :new_password%>
						<%=f.password_field :new_password,:placeholder=>"密码"%>
						
						<%=f.label :new_password_confirmation%>
						<%=f.password_field :new_password_confirmation,:placeholder=>"确认密码"%>
						<%=f.hidden_field :reset_token%>
						
						<button class="btn btn-primary ">修改密码</button>

					<%end%>

        </div>
    </div>
</div>
