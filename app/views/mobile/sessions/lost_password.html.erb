
<div class="register-container container">
    <div class="row">
			<% flash.each do |key,value| %>
			  <div class="alert alert-<%= key %>"><%= value %></div>
			<% end %>
        <div class="register span12">

					<%= form_for(:session, url: mobile_send_password_path ,:html=>{:class=>"input-group"}) do |f| %>
					 	<h3> <span class="red"><strong>自游购物帮</strong></span></h3>
          	<label for="firstname">手机号</label>
					 	<%=f.text_field :mobile,:placeholder=>"手机号"%>
				    <%=f.label :email%>
						<%=f.text_field :email,:placeholder=>"注册邮箱地址"%>
						
						<button class="btn btn-primary ">发送邮件</button>

					<%end%>
	
         
        </div>
    </div>
</div>

<%= link_to mobile_signup_path,:class=>"btn pull-right" ,"data-ignore"=>"push" do%>
	新用户注册
<%end%>

<%= link_to mobile_signin_path,:class=>"btn pull-right", "data-ignore"=>"push" do%>
 	返回登录
<%end%>