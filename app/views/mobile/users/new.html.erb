<div class="register-container container">
    <div class="row">
        <div class="register span12">
					<%= form_for(:session, url: mobile_sessions_path ,:html=>{:class=>"input-group"}) do |f| %>
          <h3>注册 <span class="red"><strong>自由购物帮</strong></span></h3>
						<%=f.label :phone%>
						<%=f.text_field :phone,:placeholder=>"手机号"%>
				    
						<%=f.label :password%>
						<%=f.text_field :password,:placeholder=>"密码"%>
						
						<%=f.label :password_confrimation%>
						<%=f.text_field :password_confrimation,:placeholder=>"确认密码"%>
						<button class="btn btn-primary btn-block">注册</button>
					<%end%>
        </div>
    </div>
</div>
